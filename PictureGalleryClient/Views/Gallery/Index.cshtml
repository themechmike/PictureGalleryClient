@model GalleryViewModel
@{
    ViewData["Title"] = "Image Gallery";
    Layout = "_Layout";

}
<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/css/GalleryStyleSheet.css" />
</head>
<body>
    <div class="container">
        <h1>Image Gallery</h1>
        <p>Hello from the Gallery Template!</p>
    </div>


    <div class="container">
        <div class="row">
            @foreach (var galleryItem in Model.GalleryItems)
            {
                <div class="col-sm-4 ">
                    <div class="card-columns">
                        <div class="card" style="width: 20rem;">
                            <div class="hover hover-2 text-white rounded">
                                <img src="@galleryItem.Url" alt="@galleryItem.Title" />

                                <a href="@galleryItem.Url">
                                    <div class="hover-overlay"></div>
                                </a>
                                <div class="hover-2-content px-5 py-4">
                                    <h3 class="hover-2-title text-uppercase font-weight-bold mb-0"> @galleryItem.Title </h3>
                                    <p class="hover-2-description text-uppercase mb-0">@galleryItem.DateAdded</p>
                                </div>
                            </div>
                            <div class="card-body">
                                <p class="card-text">@galleryItem.OwnerId</p>
                                <a href="#" class="btn btn-primary">Do something</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="panel-footer add-picture-form">
        @await Html.PartialAsync("_AddPicturePartial", new GalleryItemViewModel())
    </div>

