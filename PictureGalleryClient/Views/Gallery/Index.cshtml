@model GalleryViewModel
@{
    ViewData["Title"] = "Image Gallery";
    Layout = "_Layout";

}
<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
</head>
<body>
    <div class="container">
        <h1>Image Gallery</h1>
        <p>Hello from the Gallery Template!</p>
    </div>


    <div class="container">
        <div class="row">
            @foreach (var galleryItem in Model.GalleryItems)
            {
                <div class="col-sm-4 ">
                    <div class="card-columns">
                        <div class="card" style="width: 22rem;">
                            <img class="card-img-top" src="@galleryItem.Url" alt="Card image cap">
                            
                            <div class="card-body">
                                <h5 class="card-title">@galleryItem.Title</h5>
                                <p class="card-text">@galleryItem.DateAdded</p>
                                <p class="card-text">@galleryItem.OwnerId</p>
                                <a href="#" class="btn btn-primary">Do something</a>
                            </div>
                        </div>                        
                    </div>
                </div>
            }
        </div>
    </div>
    
                <div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
</body>
</html>